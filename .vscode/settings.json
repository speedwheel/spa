{
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code'",
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.fontSize": 13, // 15
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.lineHeight": 19,
  "editor.tabSize": 2,
  //"editor.insertSpaces": true,
  "editor.letterSpacing": 0,

  "gopls": {
    "ui.semanticTokens": true
  },
  //"editor.semanticHighlighting.enabled": true,

  "editor.minimap.enabled": true,
  //"editor.formatOnSave": false,

  // Configure glob patterns for excluding files and folders.
  "files.exclude": {
    "/.git": true,
    "/.svn": true,
    "/.hg": true,
    "/CVS": true,
    "**/.DS_Store": true,
    "vendor": true,
    "**/*_templ.go": true,
    "**/*_templ.txt": true
  },

  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/vendor": true,
    "**/dist": true,
    "**/mod": true
  },

  // "workbench.colorCustomizations": {
  //   "tab.activeBackground": "#282c34",
  //   "activityBar.background": "#282c34",
  //   "sideBar.background": "#282c34"
  // },

  "go.lintTool": "golangci-lint",
  "go.useLanguageServer": true,
  "go.formatTool": "gofmt",
  "go.lintOnSave": "package",

  "editor.suggestFontSize": 14,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Monaspace Krypton'",
  //"terminal.integrated.lineHeight": 1.3,
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "vscode-great-icons",

  "window.restoreFullscreen": false,
  "telemetry.enableTelemetry": false,
  "telemetry.telemetryLevel": "off",

  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.enablePreview": false,

  "extensions.ignoreRecommendations": false,

  "git.enabled": true,
  "git.enableSmartCommit": false,
  "editor.guides.indentation": true,

  "terminal.integrated.profiles.linux": {
    "bash login": {
      "path": "/bin/bash",
      "args": ["-l"],
      "icon": "terminal-bash",
      "color": "terminal.ansiCyan"
    }
  },
  "terminal.integrated.defaultProfile.linux": "bash login",
  "terminal.integrated.scrollback": 1000,

  "files.associations": {
    "*.css": "tailwindcss",
    "*.templ": "templ"
  },

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  //"prettier.documentSelectors": ["**/*.css", "**/*.templ"],
  "tailwindCSS.includeLanguages": {
    "templ": "html",
    "go": "go"
  },
  "emmet.includeLanguages": {
    "templ": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["Class\\(([^)]*)\\)", "[\"`]([^\"`]*)[\"`]"], // Class("...") or Class(`...`)
    ["Classes\\(([^)]*)\\)", "[\"`]([^\"`]*)[\"`]"], // Classes("...") or Classes(`...`)
    ["Class\\{([^)]*)\\}", "[\"`]([^\"`]*)[\"`]"], // Class{"..."} or Class{`...`}
    ["Classes\\{([^)]*)\\}", "[\"`]([^\"`]*)[\"`]"], // Classes{"..."} or Classes{`...`}
    ["Class:\\s*[\"`]([^\"`]*)[\"`]"], // Class: "..." or Class: `...`
    ["Classes:\\s*[\"`]([^\"`]*)[\"`]"] // Classes: "..." or Classes: `...`
  ],
  "[templ]": {
    "editor.defaultFormatter": "a-h.templ"
  },
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "templ",
    "HTML (Eex)"
  ],
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "php",
    "javascript",
    "templ"
  ]
}
